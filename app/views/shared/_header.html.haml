.navbar.navbar-inverse.set-radius-zero
  .container
    .navbar-header
      %h1
        = link_to 'Travel Mentor', root_path, id: 'white-title'
    - if current_user
      .gravatar-header
        = link_to image_tag(current_user.gravatar_url, :size => "50"), user_path(current_user)

- if current_user
  %section.menu-section
    .container
      .row
        .col-md-12
          .navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right#menu-top
              %li
                = link_to 'Find People', people_path
              %li
                = link_to 'Your Connections', connections_path
              %li
                = link_to 'Profile', edit_user_path(current_user)
              %li
                = link_to 'Sign Out', sign_out_path, method: :delete
  - if current_user.admin?
    %section.menu-section
      .container
        .row
          .col-md-12
            .navbar-collapse.collapse
              %ul.nav.navbar-nav.navbar-right#menu-top
                %li
                  = link_to 'All Conversations', admin_messages_path
              